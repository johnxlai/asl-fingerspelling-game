


<section class="flex flex-col w-11/12 lg:10/12">
  <div class="text-center">
    <h1
      class="px-4 py-2 bg-purple-300 text-purple-600 inline-block mb-3 text-3xl font-extrabold before:absolute before:bg-purple-600 relative h1-bg-style">
      USER PROFILE</h1>
        <div class="p-3 text-white w-full md:w-6/12 mx-auto">
          <div class="p-3 md:px-7 md:py-3 rounded-lg shadow-lg bg-purple-900/[0.2] flex flex-col items-center mb-3">
            <div class="flex items-center justify-center mb-3 md:mb-0 self-end">
              <span class="bg-purple-800 text-purple-300 p-1 uppercase font-bold text-sm rounded-l-lg">id</span>
              <span class="bg-purple-400 text-white p-1 uppercase font-bold text-sm rounded-r-lg">{{id}}</span>
            </div>
            <img src="{{image}}" alt="" class="w-[200px] max-w-full rounded-full mb-3 md:mb-0 border-2 border-solid border-purple-300">
            <h2 class="text-white text-3xl uppercase font-bold my-3">
              {{username}}
            </h2>
            <div class="grid grid-cols-2 lg:grid-cols-4 justify-between items-center gap-3">
              <div class="font-bold text-center flex flex-col h-full">
                <p class="text-purple-300 bg-purple-900 p-3 grow flex justify-center items-center">User Level</p>
                <p class="text-xl text-purple-900 bg-purple-300 p-3">{{ level }}</p>
              </div>
              <div class="font-bold text-center flex flex-col h-full">
                <p class="text-purple-300 bg-purple-900 p-3 grow flex justify-center items-center">Total Games Played: </p>
                <p class="text-xl text-purple-900 bg-purple-300 p-3">{{ results.length}}</p>
              </div>
              <div class="font-bold text-center flex flex-col h-full">
                <p class="text-purple-300 bg-purple-900 p-3 grow flex justify-center items-center">Last Game Result : </p>
                <p class="text-xl text-purple-900 bg-purple-300 p-3">{{#each results as |result|}}
                  {{#if @last}} {{result.points}}{{/if}}
                  {{/each}}</p>
              </div>
              <div class="font-bold text-center flex flex-col h-full">
                <p class="text-purple-300 bg-purple-900 p-3 grow flex justify-center items-center">Total Player Points: </p>
                <p class="text-xl text-purple-900 bg-purple-300 p-3">{{ total_points }}</p>
              </div>
              <div class="col-span-full p-0">
                <p class="text-purple-300 font-bold uppercase bg-purple-900 p-3">Game History</p>
                <ul class="flex flex-wrap gap-5 justify-center items-center text-xl bg-purple-300 p-3">
                  {{#each results as |result|}}
                  <li class="text-md text-purple-900 font-bold">pts: {{result.points}}</li>
                  {{/each}}
                </ul>
              </div>
            </div>
          </div>
          <div class="shadow-lg bg-purple-900 flex flex-col">
            <form class="flex flex-col" action="/api/users/set-img" method="POST" enctype="multipart/form-data">
              <div class="form-group m-0 flex flex-col md:flex-row md:flex-wrap">
                <label for="update-photo" class="m-0 text-sm font-bold">Upload Photo</label>
                <input type="file" name="file" id="input-files" class="form-control-file bg-purple-300" />
              </div>
              <button type="submit" class="btn rounded-none	 bg-green-400 font-['Tilt_Warp'] hover:bg-green-600">Submit</button>
            </form>
          </div>
        </div>

  </div>
  </section>

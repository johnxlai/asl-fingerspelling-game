

<section id="question-frame"
  class="flex flex-col w-11/12 lg:w-10/12 text-white bg-purple-800/[.06] border-purple-600">
  <div class="text-center">
    <h1
      class="px-4 py-2 bg-purple-300 text-purple-600 inline-block text-3xl font-extrabold before:absolute before:bg-purple-600 relative h1-bg-style -top-[28px]">
      Practice makes perfect</h1>
  </div>


  <div class="main-game w-full px-3 rounded-lg text-white text-center">
    <div class="text-center">
      <button class="start-practice my-4 btn bg-green-400 font-['Tilt_Warp'] hover:bg-green-600">START</button>
    </div>

    <div class="feedback"></div>
    <div class="total-points"></div>

    <div class="game-section">
      <div class="flex justify-center overflow-x-scroll md:overflow-hidden">
        <img class="question max-w-[100%] w-[200px]" src="image/alphabet/j.svg" alt="question">
      </div>

      {{!-- <div class="timer">Time Left: 5</div> --}}
      <form class="game-form text-black flex flex-col md:flex-row md:flex-wrap justify-center items-center mb-3">
        <input type="text"
          class="user-input block w-50  md:rounded-l-lg py-3 px-4 bg-purple-100 text-purple-600 font-semibold text-center h-[50px] mb-2"
          name="user-input" placeholder="User Input" autofocus>

        <button type="submit"
          class="bg-green-400 text-neutral-800 font-['Tilt_Warp'] hover:bg-green-600 hover:text-white h-[50px] md:rounded-r-lg px-3 py-1 mb-2">Submit</button>
      </form>

      <div class="user-info mb-6 flex flex-wrap justify-center items-center">
        {{#if loggedIn}}
        <span class="text-xs font-medium px-2.5 py-0.5 mb-2 mr-2 rounded-full bg-purple-900 text-purple-300">
          Have fun {{ username }}</span>

        <span class="text-xs font-medium px-2.5 py-0.5 mb-2 mr-2 rounded-full bg-purple-900 text-purple-300">
          Player Level: {{ level }}</span>

        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full mb-2 bg-purple-900 text-purple-300">
          Total player points: <span class="user-existing-pts">{{ total_points }}</span></span>
        </span>
        {{ else }}
        <span class="user-existing-pts hidden">0</span>
        {{/if}}
      </div>
    </div>
    <div class="hidden end-game">
      <h2>Good Job!</h2>
      <a class="btn text-neutral-800 bg-green-400 font-['Tilt_Warp'] my-3" href="/start">
        <p>Play the Real Game</p>
      </a>
      <a class="btn text-neutral-800 bg-pink-400 font-['Tilt_Warp'] my-3" href="/practice">
        <p>Practice Again</p>
      </a>
    </div>
  </div>
</section>

<script src="/js/practice.js"></script>
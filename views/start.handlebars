<section class="flex flex-col w-11/12 lg:w-10/12 text-white">
  <div class="user-info mb-8">


    {{!-- 30sec
    5 questions
    each question u answer will give you 10 points
    total around each round can only 50 max


    level 1 = 50 go to next StaticRange
    leve1 2 = 100
    lever 3 = 150 --}}

    {{#if loggedIn}}
      <h1>Have Fun <span class="uppercase">{{ username }}</span></h1>
      <p>Level {{ level }}</p>
      <p>Total player points:</p>
        {{#each results as |result|}}
        <p>Total Points
          {{result.total_points}}
        </p>
        {{/each}}
    {{/if}}
  </div>

  <button class="stop-game">STOP</button>

  <div>Final total point</div>
  <div class="main-game mb-4 w-full bg-sky-500/[.06] p-10 rounded-lg">
      <div class="level">
        <h2>Level 1</h2>
      </div>

      <p>Total points<span class="total-points">2</span></p>
      <button class="add-points btn bg-pink-500">add-point</button>

      <div class="question-frame grid xs:grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4">
        <img src="/image/alphabet/l.svg" alt="letter l">
        <img src="/image/alphabet/o.svg" alt="letter o">
        <img src="/image/alphabet/v.svg" alt="letter v">
        <img src="/image/alphabet/e.svg" alt="letter e">
      </div>
      <div class="flex justify-between">
        <div class="timer">Time Left: 5</div>
          <form id="answer-input" class="text-black">
            <label for="answer" class="text-white">User Input:</label>
            <input type="text" id="answer" class="answer" name="answer">
          </form>
      </div>
  </div>
  <div class="rank grid grid-cols-3 gap-4">
    <div class="col-span-full bg-sky-500/[.06] p-3 rounded-lg"><h3>Rank</h3></div>
    <div class="p-4 rounded-lg shadow-lg bg-pink-500">01</div>
    <div class="p-4 rounded-lg shadow-lg bg-pink-500">02</div>
    <div class="p-4 rounded-lg shadow-lg bg-pink-500">03</div>

    <div id="points-display">Points: 0</div>

  </div>
  <div class="main-game mb-4 w-full bg-sky-500/[.06] p-10 rounded-lg">
    <div class="question-frame grid xs:grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4">
      <img id="image-0" src="" alt="letter 0">
      <img id="image-1" src="" alt="letter 1">
      <img id="image-2" src="" alt="letter 2">
      <img id="image-3" src="" alt="letter 3">
    </div>
    <div id="feedback"></div>




    <div class="flex justify-between">

      <form id="form" class="text-black">
        <label for="input" class="text-white">User Input:</label>
        <input type="text" id="input" class="answer" name="answer">
        <button type="submit" class="btn">Submit</button>

      </form>
    </div>

  </div>
</section>

<script src="/js/start.js"></script>

